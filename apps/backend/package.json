{
  "name": "@foodsync/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch bin/server.ts",
    "build": "node ace build",
    "start": "node bin/server.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build",
    "migration:run": "node ace migration:run",
    "migration:rollback": "node ace migration:rollback",
    "migration:fresh": "node ace migration:fresh",
    "migration:status": "node ace migration:status",
    "db:seed": "node ace db:seed"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#services/*": "./app/services/*.js",
    "#validators/*": "./app/validators/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#config/*": "./config/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.4",
    "@adonisjs/core": "^6.14.1",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.3.0",
    "@vinejs/vine": "^4.1.0",
    "luxon": "^3.5.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@swc/core": "^1.9.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.9.3",
    "eslint": "^9.15.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
