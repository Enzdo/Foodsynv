{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/frontend/Dockerfile",
    "watchPatterns": ["apps/frontend/**"]
  },
  "deploy": {
    "startCommand": "node .output/server/index.mjs",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
